c Source
c ---------------------------------------------------------------
  sdef erg = 1000 par = 1 dir = 1 pos = 0 0 0 rad = 0. vec = 0 0 1
c ---------------------------------------------------------------
c Options
c ---------------------------------------------------------------
  imp:n 1 0
  phys:n 1001
  mode n
  lca   2 1 5j -1 1
  lea   2j 0
c ---------------------------------------------------------------
c Tallies
c ---------------------------------------------------------------
c ---------------------------------------------------------------
  print
  nps 2500
  prdmp 2j -1
  dbcn   29j  12j  1 2j 1
  tropt  genxs inxs06
