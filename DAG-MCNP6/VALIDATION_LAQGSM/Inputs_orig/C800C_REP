mode n h d t s a # / * z
m1  06012 1
lca 7j -2 j 1    $ LAQGSM, no transport, only the 1st inelstic interaction
nps 1000
c nps 1e6
prdmp 2j -1
sdef par=06012 erg=9600 vec=0 0 1 dir 1
phys:# 9600
phys:h 3100
phys:n 3100
phys:a 6000
phys:d 5000
phys:t 5200
phys:s 5200
phys:/ 2200
phys:* 2200
phys:z 2200
c
f1:/  502
f11:*  502
c define the "segments" for pi+ at 15, 45, 70, 90, and 140 deg
fs1 -125 -175 -425 -475 -675 -725 -875 925 1425 1475 T
c define the "segments" for pi- at 20, 40, 56, 90, and 140 deg
fs11 -175 -225 -375 -425 -535 -585 -875 925 1425 1475 T
c
c The following Segment Divisor card is needed to get 1/sr for pi+ spectra
sd1   0.14894  $ 2pi(cos0 -cos12.5)
      0.14187  $ 2pi(cos12.5 - cos17.5)
      1.35993  $ 2pi(cos17.5 - cos42.5)
      0.38759  $ 2pi(cos42.5 - cos47.5)
      1.84039  $ 2pi(cos47.5 - cos67.5)
      0.51508  $ 2pi(cos67.5 - cos72.5)
      1.61532  $ 2pi(cos72.5 - cos87.5)
      0.54814  $ 2pi(cos87.5 - cos92.5)
      4.71072  $ 2pi(cos92.5 - cos142.5)
      0.31440  $ 2pi(cos142.5 - cos147.5)
      0.98400  $ 2pi(cos147.5 - cos180)
      12.56637 $ 4pi
c
c The following Segment Divisor card is needed to get 1/sr for pi- spectra
sd11  0.29080  $ 2pi(cos0 -cos17.5)
      0.18747  $ 2pi(cos17.5 - cos22.5)
      0.82012  $ 2pi(cos22.5 - cos37.5)
      0.35234  $ 2pi(cos37.5 - cos42.5)
      0.89507  $ 2pi(cos42.5 - cos53.5)
      0.45443  $ 2pi(cos53.5 - cos58.5)
      3.00889  $ 2pi(cos58.5 - cos87.5)
      0.54814  $ 2pi(cos87.5 - cos92.5)
      4.71072  $ 2pi(cos92.5 - cos142.5)
      0.31440  $ 2pi(cos142.5 - cos147.5)
      0.98400  $ 2pi(cos147.5 - cos180)
      12.56637 $ 4pi
